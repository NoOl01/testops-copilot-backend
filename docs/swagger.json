{
    "swagger": "2.0",
    "info": {
        "title": "TestOps Copilot",
        "contact": {},
        "version": "0.1.0"
    },
    "basePath": "/api/v1",
    "paths": {
        "/api/v1/generate": {
            "post": {
                "description": "Generates a test case based on the user prompt. The request will be processed by the LLM and returned in a unified response format.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Generate"
                ],
                "summary": "Generate test case using LLM",
                "parameters": [
                    {
                        "description": "Request body containing test cases",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/dto.GenerateBody"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response with generated test case",
                        "schema": {
                            "$ref": "#/definitions/dto.GenerateResult"
                        }
                    },
                    "400": {
                        "description": "Invalid request body",
                        "schema": {
                            "$ref": "#/definitions/dto.ErrorResult"
                        }
                    },
                    "500": {
                        "description": "Internal server error or LLM request failed",
                        "schema": {
                            "$ref": "#/definitions/dto.ErrorResult"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.AllureMetadata": {
            "type": "object",
            "properties": {
                "feature": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "link": {
                    "type": "string"
                },
                "manual": {
                    "type": "boolean"
                },
                "priority": {
                    "type": "string"
                },
                "story": {
                    "type": "string"
                },
                "tags": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "dto.Case": {
            "type": "object",
            "properties": {
                "allure_metadata": {
                    "$ref": "#/definitions/dto.AllureMetadata"
                },
                "test_type": {
                    "type": "string"
                },
                "user_prompt": {
                    "type": "string"
                }
            }
        },
        "dto.ErrorResult": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                }
            }
        },
        "dto.GenerateBody": {
            "type": "object",
            "properties": {
                "cases": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/dto.Case"
                    }
                }
            }
        },
        "dto.GenerateResult": {
            "type": "object",
            "properties": {
                "content": {
                    "type": "string"
                },
                "created": {
                    "type": "integer"
                },
                "refusal": {
                    "type": "string"
                },
                "stop_reason": {
                    "type": "string"
                }
            }
        }
    }
}